$table-border-color = lighten(#EFEFEF, 2%)


pt-settings-container
  width: 100%

  > .nav 
    display: inline-block
    margin-right: 15px
    width: 200px
    position: fixed
  
  > form 
    display: inline-block
    flex: 1 1 auto
    width: calc(100% - 230px)
    margin-left: 230px
    padding-bottom: 60px
  
  &.full-width 
    > form 
      margin-left: 0
      width: 100%

  .settings-panel 
    margin-bottom: 25px

    .settings-panel-header 
      padding: 10px 20px
      border-bottom: 1px solid $table-border-color
      font-size: 14px
      font-weight: 500
      color: #fff
      border-top-left-radius: 3px
      border-top-right-radius: 3px

      > .setting-info 
        margin: 0
        font-size: 12px
        font-weight: 300

    .settings-panel-body 
      padding: 10px 30px 20px 30px
      border 1px solid $table-border-color
      border-top: none
      
    .settings-select 
      width: 100%
      padding: 2px 2px 26px 2px

      > .select-label 
        color: #fff
        font-size: 11px
        font-weight: 600
      
      > md-select 
        min-width: 120px
        margin: 0
        padding-bottom: 10px

        > .md-select-label 
          padding: 10px 0 5px
        
      > p 
        font-size: 13px
        color: #fff
 
  md-input-container 
    label 
      color: #fff
    
    p 
      order: 3
      font-size: 13px
      color: #fff
      margin-top: 10px
  